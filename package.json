{
  "name": "maria",
  "version": "3.0.0",
  "description": "Utility extension for personal use.",
  "scripts": {
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts{,x}'",
    "clean": "rm -rf dist && cpy manifest.json dist && cpy src/assets/* dist/assets",
    "prebuild": "npm run clean",
    "build": "env NODE_ENV=production webpack --config webpack.config.js",
    "prewatch": "npm run clean",
    "watch": "env NODE_ENV=development webpack --config webpack.config.js -w"
  },
  "lint-staged": {
    "{,src}/**/*.{ts,js}": [
      "npm run lint"
    ],
    "{,src}/**/*.{html,scss}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bakuzan/maria.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bakuzan/maria/issues"
  },
  "homepage": "https://github.com/bakuzan/maria#readme",
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@types/chrome": "0.0.102",
    "@types/jszip": "^3.1.7",
    "@types/node": "^12.12.31",
    "@types/sortablejs": "^1.10.2",
    "awesome-typescript-loader": "^5.2.1",
    "cpy-cli": "^3.1.1",
    "css-loader": "^3.4.2",
    "html-webpack-plugin": "^4.0.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.2",
    "sass-loader": "^8.0.2",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "jszip": "^3.2.2",
    "rss-parser": "^3.8.0",
    "sortablejs": "^1.10.2",
    "webextension-polyfill-ts": "^0.14.0"
  }
}
