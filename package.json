{
  "name": "maria",
  "version": "4.0.0",
  "description": "Utility extension for personal use.",
  "scripts": {
    "start": "echo 'To run the app in dev mode use: npm run watch'",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts{,x}'",
    "clean": "rm -rf dist && cpy manifest.json dist && cpy src/assets/* dist/assets",
    "prebuild": "npm run clean",
    "build": "env NODE_ENV=production webpack --config webpack.config.js",
    "prewatch": "npm run clean",
    "watch": "env NODE_ENV=development webpack --config webpack.config.js -w",
    "test": "jest",
    "test:watch": "jest -o --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "{,src}/**/*.{ts,js}": [
      "npm run lint"
    ],
    "{,src}/**/*.{html,scss}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bakuzan/maria.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bakuzan/maria/issues"
  },
  "homepage": "https://github.com/bakuzan/maria#readme",
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@types/chrome": "0.0.163",
    "@types/jest": "^27.5.2",
    "@types/jszip": "^3.4.1",
    "@types/luxon": "^2.0.6",
    "@types/node": "^16.18.68",
    "@types/sortablejs": "^1.15.7",
    "buffer": "^6.0.3",
    "cpy-cli": "^5.0.0",
    "css-loader": "^6.8.1",
    "fork-ts-checker-webpack-plugin": "^6.5.3",
    "html-webpack-plugin": "^5.6.0",
    "https-browserify": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^15.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "mockzilla": "^0.12.0",
    "mockzilla-webextension": "^0.13.0",
    "node-fetch": "^3.3.2",
    "node-sass": "^9.0.0",
    "prettier": "^3.1.1",
    "process": "^0.11.10",
    "sass-loader": "^12.6.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "timers-browserify": "^2.0.12",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^5.3.3",
    "url": "^0.11.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "luxon": "^2.5.2",
    "rss-parser": "^3.13.0",
    "sortablejs": "^1.15.1",
    "webextension-polyfill-ts": "^0.26.0"
  }
}
