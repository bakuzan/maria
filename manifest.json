{
  "manifest_version": 2,
  "name": "Maria",
  "description": "Personal Utility Extension",
  "version": "3.0.0",
  "author": "Bakuzan",
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "contextMenus",
    "downloads",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/maria_16x16.png",
      "32": "assets/maria_32x32.png",
      "48": "assets/maria_48x48.png",
      "128": "assets/maria_128x128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "js": ["contentscript.js"],
      "css": ["contentscript.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": ["assets/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "commands": {
    "add-links": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Add processed Links",
      "global": true
    },
    "remove-links": {
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      },
      "description": "Remove processed Links",
      "global": true
    },
    "open-tab-store": {
      "suggested_key": {
        "default": "Alt+Shift+1"
      },
      "description": "Open tab store management tab",
      "global": true
    },
    "store-tab": {
      "suggested_key": {
        "default": "Alt+Shift+0"
      },
      "description": "Send current store to tab store",
      "global": true
    }
  },
  "icons": {
    "16": "assets/maria_16x16.png",
    "32": "assets/maria_32x32.png",
    "48": "assets/maria_48x48.png",
    "128": "assets/maria_128x128.png"
  }
}
