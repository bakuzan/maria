{
  "manifest_version": 2,
  "name": "Maria",
  "description": "Personal Utility Extension",
  "version": "1.0.0",
  "author": "Bakuzan",
  "background": {
    "scripts": ["src/thirdParty/hot-reload.js", "src/background.js"],
    "persistant": false
  },
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/images/maria_16x16.png",
      "32": "src/images/maria_32x32.png",
      "48": "src/images/maria_48x48.png",
      "128": "src/images/maria_128x128.png"
    }
  },
  "options_page": "src/options.html",
  "icons": {
    "16": "src/images/maria_16x16.png",
    "32": "src/images/maria_32x32.png",
    "48": "src/images/maria_48x48.png",
    "128": "src/images/maria_128x128.png"
  }
}
