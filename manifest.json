{
  "manifest_version": 2,
  "name": "Maria",
  "description": "Personal Utility Extension",
  "version": "1.0.0",
  "author": "Bakuzan",
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "page": "src/background.html",
    "persistant": false
  },
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/images/maria_16x16.png",
      "32": "src/images/maria_32x32.png",
      "48": "src/images/maria_48x48.png",
      "128": "src/images/maria_128x128.png"
    }
  },
  "options_page": "src/options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["src/styles.css", "src/content/content.css"]
    }
  ],
  "web_accessible_resources": [
    "src/consts.js",
    "src/thirdParty/chrome-extension-async.js",
    "src/content/*",
    "src/utils/*.js"
  ],
  "icons": {
    "16": "src/images/maria_16x16.png",
    "32": "src/images/maria_32x32.png",
    "48": "src/images/maria_48x48.png",
    "128": "src/images/maria_128x128.png"
  }
}
