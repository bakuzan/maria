{
  "manifest_version": 3,
  "name": "Maria",
  "description": "Personal Utility Extension",
  "version": "4.0.0",
  "author": "Bakuzan",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "tabs",
    "notifications",
    "storage",
    "contextMenus",
    "downloads",
    "unlimitedStorage",
    "scripting"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/maria_16x16.png",
      "32": "assets/maria_32x32.png",
      "48": "assets/maria_48x48.png",
      "128": "assets/maria_128x128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "js": ["contentscript.js"],
      "css": ["contentscript.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "script-src": "'self' 'unsafe-eval'",
    "object-src": "'self'"
  },
  "commands": {
    "open-tab-store": {
      "suggested_key": {
        "default": "Alt+Shift+1"
      },
      "description": "Open tab store management tab",
      "global": true
    },
    "store-tab": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Send current tab to tab store",
      "global": true
    },
    "store-tabs-after": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Send tabs after current to tab store",
      "global": true
    }
  },
  "icons": {
    "16": "assets/maria_16x16.png",
    "32": "assets/maria_32x32.png",
    "48": "assets/maria_48x48.png",
    "128": "assets/maria_128x128.png"
  }
}
